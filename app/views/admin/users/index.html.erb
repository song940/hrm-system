<h1>Listing users</h1>

<table class="table table-striped table-hover table-bordered " > 
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <div class="btn-group">
            <button class="btn btn-mini dropdown-toggle" data-toggle="dropdown"><i class="icon icon-user"></i> <%= user.fullname %> <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li>
                <a href=""><i class="icon icon-edit"></i> Edit</a>
                <a href=""><i class="icon icon-trash"></i> Delete</a>
                <a href=""><i class="icon icon-user"></i> Make Admin</a>
              </li>
            </ul>
          </div>
        </td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
